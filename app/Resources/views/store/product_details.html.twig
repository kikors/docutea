{% extends 'base.html.twig' %}

{% block content %}
    <div class="large-container large-container--white large-container--pad">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <a href="/tienda"><- Volver</a>
            </div>
            <div class="col-md-8 col-xs-12">

                <div class="col-md-12 col-xs-12">
                    <div class="recommended-machine-container">
                        <div class="recomenden-name-holder">
                            <div class="recomended-name">{{ product.nombre }}</div>
                            <div class="recomended-desc"><p>{{ product.description }}</p></div>
                        </div>
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class=""></li>
                                <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                                <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
                            </ol>

                            <div class="carousel-inner" role="listbox">
                                <div class="item">
                                    <img src="/uploads/{{product.imagePerspective}}">
                                </div>

                                <div class="item">
                                    <img src="/uploads/{{product.imageFront}}">
                                </div>

                                <div class="item active">
                                    <img src="/uploads/{{product.imageLateral}}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-xs-12">
                    <div class="recomended-float-list">
                        <span>Características del equipo:</span>
                        <ul class="recomended-iconic-list list-inline">
                            {% if product.airPrint == true %}
                                <li data-toggle="tooltip" data-placement="top" title="Doble cara automático">
                                    <img src="{{ asset('images/icon-doble-cara.png') }}">
                                </li>
                            {% endif %}
                            {% if product.wifi == true %}
                                <li data-toggle="tooltip" data-placement="top" title="Conectividad Wi-Fi">
                                    <img src="{{ asset('images/icon-wifi.png') }}">
                                </li>
                            {% endif %}
                            {% if product.cloud == true %}
                                <li data-toggle="tooltip" data-placement="top" title="Conectividad Ethernet">
                                    <img src="{{ asset('images/icon-ethernet.png') }}">
                                </li>
                            {% endif %}
                            {% if product.nfc == true %}
                                <li data-toggle="tooltip" data-placement="top" title="Impresión móvil">
                                    <img src="{{ asset('images/icon-movil.png') }}">
                                </li>
                            {% endif %}
                            {% if product.sheet != ''  %}
                                <li data-toggle="tooltip" data-placement="top" title="Descargar especificaciones técnicas">
                                    <a href="{{ product.sheet }}">
                                        <img src="{{ asset('images/icon-pdf.png') }}">
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>


            </div>


            <div class="col-md-4 col-xs-12">
                <div class="configurator-price">
                    <div class="configurator-price__title">Todos muestros servicios incluyen:</div>
                    <ul class="chek-list">
                        <li>Equipos</li>
                        <li>Help Desk / Soporte</li>
                        <li>Monitorización</li>
                        <li>Mantenimiento</li>
                        <li>Consumibles</li>
                        <li>Informes mensuales</li>
                    </ul>
                    <div class="configurator-price__total">
                        <div class="configurator-price__total-text">Precio</div>
                        <div class="configurator-price__total-price configurator-price-total">{{ product.price }} €
                        </div>
                        <div class="configurator-price__total-period">mes</div>
                    </div>

                    <div class="divbtnaddcart">
                        <input type="hidden" id="quantity-{{ product.id }}" value="1">
                        <input type="hidden" id="productId-{{ product.id }}" value="{{ product.id }}">
                        <button class="addcart" data-id="{{ product.id }}">Añadir al carro</button>
                    </div>

                </div>
            </div>

        </div>
    </div>



{% endblock %}

