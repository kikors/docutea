{% extends 'base.html.twig' %}

{% block content %}
<div class="large-container large-container--pad">
                <div class="container">

<div class="row">
        <div class="col-md-12">
            <div class="fos-page-title login">Formulario de compra</div>
            <div class="errorForm hide">
                <p>Por favor revisa los campos marcados</p>
            </div>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group required">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.cif) }}
                            {{ form_widget(form.cif) }}
                            {{ form_errors(form.cif) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.address) }}
                            {{ form_widget(form.address) }}
                            {{ form_errors(form.address) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.town) }}
                            {{ form_widget(form.town) }}
                            {{ form_errors(form.town) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.province) }}
                            {{ form_widget(form.province) }}
                            {{ form_errors(form.province) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.cp) }}
                            {{ form_widget(form.cp) }}
                            {{ form_errors(form.cp) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone) }}
                            {{ form_errors(form.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>
